    <div class="inbox-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                    <div class="inbox-left-sd">
                        <div class="compose-ml">
                            <a class="btn" href="#">Compose</a>
                        </div>
                        <div class="inbox-status">
                            <ul class="inbox-st-nav inbox-ft">
                                <li><a href="/view_recieved_messages_get"><i class="notika-icon notika-mail"></i> Inbox<span class="pull-right">{{data.inboxCount}}</span></a></li>
                                <li><a href="/view_sent_messages_get"><i class="notika-icon notika-sent"></i> Sent<span class="pull-right">{{data.sentMsgCount}}</span></a></li>
