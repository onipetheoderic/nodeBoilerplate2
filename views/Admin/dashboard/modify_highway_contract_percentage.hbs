<form action="/modify_highway_contract_percentage" method="POST">
{{!-- contracts:allContracts, allHighwayInspectors:users --}}


<script>
    window.onload = function() {
   
    $('#selectField').change(function(){
        let currentVal = JSON.parse($('#selectField').val())
        console.log(currentVal)
        $('#percentage').attr('value', currentVal.currentPercentage)
        $('#percentage').attr('min', currentVal.currentPercentage)
        $('#contract_id').attr('value', currentVal._id)
    });

}
</script>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-element-list mg-t-30">
