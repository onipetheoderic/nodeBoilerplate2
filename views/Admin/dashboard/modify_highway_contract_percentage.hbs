											<option value={{{json this}}}>{{this.projectTitle}}, {{this.state}}</option>
                                        {{/each}}
										</select>
                                </div>
                            </div>
                             <div class="col-lg-6 col-md-6 col-sm-3 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                            <label>Update Current Percentage</label>
                                        <input id="percentage" name="percentage" type="number" required min="1" max="100" class="form-control input-lg" placeholder="Input Large">
                                    </div>
                                      <input id="contract_id" name="contract_id" type="hidden">
                                </div>
                            </div>

                        </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:center">
 <button class="btn notika-btn-green btn-reco-mg btn-button-mg" type="submit" style="width:40%; background-color:#00c292">
